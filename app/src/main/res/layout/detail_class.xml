<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="12dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/txtTenlop"
                    android:layout_width="319dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="lop nao"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <ImageButton
                    android:id="@+id/btn_delete_Class"
                    android:layout_width="22dp"
                    android:layout_height="26dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/icon_delete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtMonhoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="10"
                    android:text="Monhoc: "
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txthsmh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="158dp"
                    android:text="hsmh"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtsoluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="So luong: "
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txthslh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:text="Hsl"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/txtsotiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="so gio day"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtt1lop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="tien day 1 lop"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />
    </LinearLayout>


</androidx.cardview.widget.CardView>